<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:padding="0dp">


    <TextView
        android:id="@+id/calculator"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@color/dark_grey"

        android:marginTop="0dp"
        android:text="Mojos Calculator"
        android:textColor="@color/grey"
        android:textSize="14dp"
        android:textStyle="bold"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:marginTop="4dp"

        android:orientation="horizontal">


        <TextView
            android:id="@+id/calculator_type"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_padding_top="20dp"
            android:layout_weight="8"
            android:background="@color/black"
            android:paddingTop="6dp"
            android:text=" Standard calculator"
            android:textColor="@color/grey"
            android:textSize="24dp"
            android:textStyle="bold"

            />
    </LinearLayout>

    <EditText
        android:id="@+id/input_field"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="2.7"
        android:background="@android:color/black"
        android:enabled="false"
        android:gravity="end"
        android:hint="."
        android:inputType="none"
        android:margin="10dp"
        android:padding="20dp"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonPercent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="%"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonCE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="CE"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="C"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonBackspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="⌫"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonReciprocal"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="1/x"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonSquare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="x²"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonSqrt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="√x"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="/"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="7"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="8"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="9"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="*"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="4"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="5"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="6"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="-"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="1"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="2"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="3"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="+"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonPlusMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="+/-"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="0"
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:paddingTop="20dp"
            android:text="."
            android:textAlignment="center"

            android:textColor="@color/grey"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:backgroundTint="#f29d0a"
            android:paddingTop="20dp"
            android:text="="

            android:textAlignment="center"
            android:textColor="@color/dark_grey"
            android:textSize="50dp" />

    </LinearLayout>
</LinearLayout>